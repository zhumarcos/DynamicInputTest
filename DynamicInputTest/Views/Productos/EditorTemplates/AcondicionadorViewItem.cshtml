@model DynamicInputTest.Models.ViewModels.AcondicionadorViewItem
<div class="row">
    <div class="col-md-6">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="IdFabricante" class="control-label"></label>
            <select asp-for="IdFabricante" class="form-select" asp-items="ViewBag.fabricantes"></select>
            <span asp-validation-for="IdFabricante" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="IdPais" class="control-label"></label>
            <select asp-for="IdPais" class="form-select" asp-items="ViewBag.paises"></select>
            <span asp-validation-for="IdPais" class="text-danger"></span>
        </div>
    </div>
</div>